<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kb_app.keijou_benzei_app.controllers.ProductPreviewController" style="-fx-padding: 20; -fx-background-color: #f7f7f7;">
    <children>
        <!-- Sidebar -->
        <VBox spacing="20" style="-fx-padding: 10; -fx-background-color: #333; -fx-pref-width: 200;">
            <children>
                <Button text="Back to Buyer" style="-fx-background-color: #007bff; -fx-text-fill: white;" onAction="#handleBack" />
                <Button text="View Orders" style="-fx-background-color: #007bff; -fx-text-fill: white;" onAction="#handleOrders" />
                <Button text="View Messages" style="-fx-background-color: #007bff; -fx-text-fill: white;" onAction="#handleMessages"/>
            </children>
        </VBox>

        <!-- Product Details Section -->
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #f7f7f7;">
            <children>
                <ImageView fx:id="productImageView" fitHeight="300" fitWidth="300" />
                <Label fx:id="productNameLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <Label fx:id="productPriceLabel" style="-fx-font-size: 18px;" />
                <Label fx:id="productCategoryLabel" />
                <Label fx:id="productSizeLabel" />
                <Label fx:id="productGenderLabel" />
                <Label fx:id="productAgePrefLabel" />
                <Label fx:id="productDescriptionLabel" wrapText="true" style="-fx-font-size: 14px;" />
                <HBox alignment="CENTER" spacing="20">
                    <children>
                        <Button fx:id="buyNowButton" onAction="#handleBuyNow" text="Buy Now" style="-fx-font-size: 16px; -fx-background-color: #28a745; -fx-text-fill: white;" />
                        <Button fx:id="addToCartButton" onAction="#handleAddToCart" text="Add to Cart" style="-fx-font-size: 16px; -fx-background-color: #007bff; -fx-text-fill: white;" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</HBox>
