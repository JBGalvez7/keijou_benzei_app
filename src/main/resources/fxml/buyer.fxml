<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #dfe9f3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kb_app.keijou_benzei_app.controllers.BuyerController">

    <!-- Sidebar -->
    <left>
        <VBox alignment="CENTER" prefWidth="200.0" spacing="20" style="-fx-background-color: #333; -fx-padding: 20; -fx-min-height: 100%; -fx-min-width: 100%;">
            <children>
                <Text style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Navigation" />
                <Button onAction="#handleBack" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Back" />
                <Button onAction="#viewOrders" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Orders" />
                <Button onAction="#viewMessages" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Messages" />
                <Button onAction="#browseProducts" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Browse" />
            </children>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #ffffff, #dfe9f3); -fx-min-width: 100%; -fx-min-height: 100%;">
            <children>
                <!-- Header -->
                <Text fill="#333" strokeType="OUTSIDE" strokeWidth="0.0" text="KEIJOU BENKEI" wrappingWidth="400.0">
                    <font>
                        <Font name="Eras Bold ITC" size="40.0" />
                    </font>
                </Text>
                <Text fill="#666" strokeType="OUTSIDE" strokeWidth="0.0" text="Browse and Shop Now!" translateY="-10.0">
                    <font>
                        <Font name="Eras Demi ITC" size="20.0" />
                    </font>
                </Text>

                <!-- Scrollable Product Section -->
                <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: transparent; -fx-padding: 10;" VBox.vgrow="ALWAYS">
                    <content>
                        <GridPane alignment="TOP_LEFT" hgap="20.0" vgap="20.0" style="-fx-padding: 20;">
                            <!-- Row 1 -->
                            <children>
                                <!-- Product 1 -->
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product1ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 1" />
                                    </children>
                                </VBox>
                                <!-- Product 2 -->
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product2ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 2" />
                                    </children>
                                </VBox>
                                <!-- Product 3 -->
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="0" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product3ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 3" />
                                    </children>
                                </VBox>
                                <!-- Product 4 -->
                                <VBox GridPane.columnIndex="3" GridPane.rowIndex="0" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product4ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 4" />
                                    </children>
                                </VBox>
                                <!-- Product 5 -->
                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product5ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 5" />
                                    </children>
                                </VBox>

                                <!-- Row 2 -->
                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product6ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 6" />
                                    </children>
                                </VBox>
                                <!-- Add remaining products similarly with appropriate rowIndex and columnIndex -->
                                <VBox GridPane.columnIndex="2" GridPane.rowIndex="1" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product7ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 7" />
                                    </children>
                                </VBox>

                                <VBox GridPane.columnIndex="3" GridPane.rowIndex="1" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product8ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 8" />
                                    </children>
                                </VBox>

                                <VBox GridPane.columnIndex="0" GridPane.rowIndex="2" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product9ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 9" />
                                    </children>
                                </VBox>

                                <VBox GridPane.columnIndex="1" GridPane.rowIndex="2" alignment="CENTER" spacing="10.0">
                                    <children>
                                        <ImageView fx:id="product10ImageView" fitHeight="400.0" fitWidth="390.0" style="-fx-cursor: hand;" />
                                        <Text style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Product 10" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
