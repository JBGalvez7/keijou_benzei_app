<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kb_app.keijou_benzei_app.controllers.BuyerController"
            prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #7FFFD4, #00FFFF, #0000FF);">

    <!-- Sidebar -->
    <left>
        <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #005f73;" prefWidth="150.0">
            <children>
                <Button text="Back" onAction="#handleBack" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Orders" onAction="#viewOrders" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Messages" onAction="#viewMessages" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <Button text="Browse" onAction="#browseProducts" style="-fx-text-fill: white; -fx-font-size: 14px;" />
            </children>
            <padding>
                <Insets top="10.0" bottom="10.0" left="10.0" right="10.0" />
            </padding>
        </VBox>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="10" alignment="TOP_CENTER">
            <children>
                <Label text="Products" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
                <ScrollPane fitToWidth="true" fitToHeight="true">
                    <content>
                        <GridPane hgap="10" vgap="10" alignment="CENTER">
                            <children>
                                <!-- Product 1 -->
                                <VBox alignment="CENTER" spacing="5">
                                    <children>
                                        <ImageView fitWidth="100" fitHeight="100">
                                            <image>
                                                <Image url="C://Users/Stefhoney/OneDrive/Pictures/Screenshots/B1.png"/>
                                            </image>
                                        </ImageView>
                                        <Label text="Product 1" style="-fx-font-size: 14px;" />
                                    </children>
                                </VBox>

                                <!-- Product 2 -->
                                <VBox alignment="CENTER" spacing="5">
                                    <children>
                                        <ImageView fitWidth="100" fitHeight="100">
                                            <image>
                                                <Image url="file:/C:/Users/Stefhoney/OneDrive/Pictures/Screenshots/BST4.png" />
                                            </image>
                                        </ImageView>
                                        <Label text="Product 2" style="-fx-font-size: 14px;" />
                                    </children>
                                </VBox>

                                <!-- Product 3 -->
                                <VBox alignment="CENTER" spacing="5">
                                    <children>
                                        <ImageView fitWidth="100" fitHeight="100">
                                            <image>
                                                <Image url="file:/C:/Users/Stefhoney/OneDrive/Pictures/Screenshots/B3.png" />
                                            </image>
                                        </ImageView>
                                        <Label text="Product 3" style="-fx-font-size: 14px;" />
                                    </children>
                                </VBox>

                                <!-- Product 4 -->
                                <VBox alignment="CENTER" spacing="5">
                                    <children>
                                        <ImageView fitWidth="100" fitHeight="100">
                                            <image>
                                                <Image url="file:/C:/Users/Stefhoney/OneDrive/Pictures/Screenshots/B4.png" />
                                            </image>
                                        </ImageView>
                                        <Label text="Product 4" style="-fx-font-size: 14px;" />
                                    </children>
                                </VBox>
                            </children>
                        </GridPane>
                    </content>
                </ScrollPane>
            </children>
            <padding>
                <Insets top="20.0" bottom="20.0" />
            </padding>
        </VBox>
    </center>
</BorderPane>
