<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.kb_app.keijou_benzei_app.controllers.AddProductController" prefHeight="600" prefWidth="800">
    <Text text="Add New Product" layoutX="20" layoutY="30" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
    <TextField fx:id="nameField" layoutX="20" layoutY="80" prefWidth="760" promptText="Product Name" />
    <TextField fx:id="priceField" layoutX="20" layoutY="130" prefWidth="760" promptText="Price" />
    <ComboBox fx:id="categoryComboBox" layoutX="20" layoutY="180" prefWidth="760" promptText="Select Category" />
    <TextField fx:id="styleField" layoutX="20" layoutY="230" prefWidth="760" promptText="Style (Optional)" />

    <ComboBox fx:id="sizeComboBox" layoutX="20" layoutY="280" prefWidth="760" promptText="Select Size">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="XXS" />
                <String fx:value="XS" />
                <String fx:value="S" />
                <String fx:value="M" />
                <String fx:value="L" />
                <String fx:value="XL" />
                <String fx:value="XXL" />
            </FXCollections>
        </items>
    </ComboBox>

    <ComboBox fx:id="agePrefComboBox" layoutX="20" layoutY="330" prefWidth="760" promptText="Age Preference">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Toddler" />
                <String fx:value="Kid" />
                <String fx:value="Teen" />
                <String fx:value="Young Adult" />
                <String fx:value="Adult" />
                <String fx:value="Elder" />
                <String fx:value="Any" />
            </FXCollections>
        </items>
    </ComboBox>

    <ComboBox fx:id="genderComboBox" layoutX="20" layoutY="380" prefWidth="760" promptText="Select Gender">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="M" />
                <String fx:value="F" />
                <String fx:value="Unisex" />
            </FXCollections>
        </items>
    </ComboBox>

    <TextArea fx:id="pictureField" layoutX="20" layoutY="430" prefWidth="760" prefHeight="50" promptText="Picture URL" />

    <TextField fx:id="ratingsField" layoutX="20" layoutY="490" prefWidth="370" promptText="Ratings (Optional: DO NOT INPUT AT FIRST)" />
    <TextField fx:id="soldCountField" layoutX="410" layoutY="490" prefWidth="370" promptText="Sold Count (Optional: DO NOT INPUT AT FIRST)" />

    <Button text="Add Product" layoutX="660" layoutY="540" onAction="#handleAddProduct" />
</AnchorPane>