<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane prefHeight="500" prefWidth="600" xmlns:fx="http://javafx.com/fxml" fx:controller="com.kb_app.keijou_benzei_app.controllers.AddProductController">
    <!-- Title -->
    <Text text="Add New Product" layoutX="20" layoutY="40" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Form Fields -->
    <TextField fx:id="nameField" layoutX="20" layoutY="80" prefWidth="560" promptText="Product Name" />
    <TextField fx:id="priceField" layoutX="20" layoutY="120" prefWidth="560" promptText="Price" />

    <!-- Category Dropdown -->
    <ComboBox fx:id="categoryComboBox" layoutX="20" layoutY="160" prefWidth="560" promptText="Select Category">
        <items>
            <!-- Categories will be populated dynamically from the database -->
        </items>
    </ComboBox>

    <TextField fx:id="styleField" layoutX="20" layoutY="200" prefWidth="560" promptText="Style (Optional)" />

    <!-- Size Dropdown -->
    <ComboBox fx:id="sizeComboBox" layoutX="20" layoutY="240" prefWidth="560" promptText="Size">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="XXS" />
                <String fx:value="XS" />
                <String fx:value="S" />
                <String fx:value="M" />
                <String fx:value="L" />
                <String fx:value="XL" />
                <String fx:value="XXL" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Age Preference Dropdown -->
    <ComboBox fx:id="agePrefComboBox" layoutX="20" layoutY="280" prefWidth="560" promptText="Age Preference">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Toddler" />
                <String fx:value="Kid" />
                <String fx:value="Teen" />
                <String fx:value="Young Adult" />
                <String fx:value="Elder" />
                <String fx:value="Any" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Gender Dropdown -->
    <ComboBox fx:id="genderComboBox" layoutX="20" layoutY="320" prefWidth="560" promptText="Gender">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="M" />
                <String fx:value="F" />
                <String fx:value="Unisex" />
            </FXCollections>
        </items>
    </ComboBox>

    <!-- Picture URL -->
    <TextArea fx:id="pictureField" layoutX="20" layoutY="360" prefWidth="560" prefHeight="40" promptText="Picture URL" />

    <!-- Optional Fields -->
    <TextField fx:id="ratingsField" layoutX="20" layoutY="420" prefWidth="560" promptText="Ratings (Optional: DO NOT INPUT AT FIRST)" />
    <TextField fx:id="soldCountField" layoutX="20" layoutY="460" prefWidth="560" promptText="Sold Count (Optional: DO NOT INPUT AT FIRST)" />

    <!-- Submit Button -->
    <Button text="Add Product" layoutX="480" layoutY="500" onAction="#handleAddProduct" />
</AnchorPane>
