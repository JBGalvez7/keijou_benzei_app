<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.kb_app.keijou_benzei_app.controllers.AddProductsController"
          hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Form labels and input fields -->
    <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <Label text="Price:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="priceField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="Picture URL:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="pictureField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Save and Cancel buttons -->
    <Button text="Save" onAction="#handleSave" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <Button text="Cancel" onAction="#handleCancel" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
</GridPane>
