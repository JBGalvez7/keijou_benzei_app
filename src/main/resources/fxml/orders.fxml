<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="800.0" prefWidth="1000.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #dfe9f3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kb_app.keijou_benzei_app.controllers.OrdersController">
    <left>
        <VBox alignment="CENTER" prefWidth="200.0" spacing="20" style="-fx-background-color: #333; -fx-padding: 20; -fx-min-height: 100%;">
            <children>
                <Text style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" text="Navigation" />
                <Button onAction="#handleBack" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Back" />
                <Button onAction="#viewOrders" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Orders" />
                <Button onAction="#viewMessages" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Messages" />
                <Button onAction="#browseProducts" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Browse" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #ffffff, #dfe9f3);">
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                    <Label text="My Orders" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;"/>
                </HBox>

                <ScrollPane fx:id="ordersScrollPane" fitToWidth="true" style="-fx-padding: 10;">
                    <content>
                        <VBox fx:id="ordersContainer" spacing="10" style="-fx-padding: 20;">
                            <!-- Dynamic Order Items Will Be Added Here -->
                            <HBox spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                                <children>
                                    <ImageView fitHeight="100.0" fitWidth="100.0" />
                                    <VBox>
                                        <children>
                                            <Text text="Order #12345 - Product Name" style="-fx-font-weight: bold;" />
                                            <Text text="Status: Shipped" />
                                        </children>
                                    </VBox>
                                </children>
                            </HBox>
                        </VBox>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>
