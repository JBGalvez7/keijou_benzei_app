<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="1080.0" prefWidth="1920.0" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #dfe9f3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kb_app.keijou_benzei_app.controllers.CartController">
    <left>
        <VBox alignment="CENTER" prefWidth="200.0" spacing="20" style="-fx-background-color: #333; -fx-padding: 20; -fx-min-height: 100%;">
            <children>
                <Button onAction="#handleCancel" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Cancel" />
                <Button onAction="#handleProceedToBuy" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Proceed to Buy" />
                <Button onAction="#handleBack" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-background-color: #555;" text="Back" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: linear-gradient(to bottom, #ffffff, #dfe9f3);">
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #2c3e50;">
                    <Label text="Your Cart" style="-fx-text-fill: white; -fx-font-size: 20; -fx-font-weight: bold;" />
                </HBox>

                <ListView fx:id="cartListView" style="-fx-padding: 10; -fx-background-color: #ffffff;" prefHeight="600.0" />
            </children>
        </VBox>
    </center>
</BorderPane>
